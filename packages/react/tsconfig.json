{
  "extends": "@cossistant/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@cossistant/react": ["./src"],
      "@cossistant/react/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/.*/",
    "**/build",
    "**/build-tests",
    "**/node_modules",
    "docs/export",
    "dist",
    "*.config.*"
  ]
}
