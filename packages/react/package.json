{
  "name": "@cossistant/react",
  "version": "0.0.0",
  "private": false,
  "author": "Cossistant Team",
  "description": "Cossistant React is a library of headless ('unstyled') React components and low-level hooks to create your own support AI agent.",
  "keywords": [
    "react",
    "ai-agent",
    "support-ai",
    "react-component",
    "support-agent",
    "saas",
    "support",
    "unstyled",
    "a11y"
  ],
  "bugs": {
    "url": "https://github.com/cossistantcom/cossistant/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cossistantcom/cossistant.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "homepage": "https://cossistant.com",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./primitive": {
      "import": {
        "types": "./dist/primitive/index.d.ts",
        "default": "./dist/primitive/index.js"
      },
      "require": {
        "types": "./dist/primitive/index.d.cts",
        "default": "./dist/primitive/index.cjs"
      }
    },
    "./styles.css": "./dist/support/styles.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:css": "bunx @tailwindcss/cli -i ./src/support/styles.css -o ./dist/support/styles.css --minify",
    "build": "tsup && bun run build:css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@cossistant/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.1.11"
  },
  "peerDependencies": {
    "@types/react": "^17 || ^18 || ^19",
    "react": "^17 || ^18 || ^19",
    "react-dom": "^17 || ^18 || ^19",
    "motion": "^12.18.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.56"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
