{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "api/*": ["../api/src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/database/src/schema/auth-schema.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../api"
    }
  ]
}
