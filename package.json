{
  "name": "cossistant",
  "private": true,
  "scripts": {
    "build:css": "cp ./packages/react/src/support/styles.css ./packages/react/dist/support/styles.css && bun run minify:css",
    "minify:css": "npx postcss ./packages/react/dist/support/styles.css --use cssnano --no-map -o ./packages/react/dist/support/styles.css",
    "build": "turbo run build && bun run build:css",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/cli": "^4.0.0",
    "cssnano": "^7.0.7",
    "husky": "^9.1.7",
    "postcss": "^8.5.1",
    "postcss-cli": "^12.0.1",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.5.0",
    "tsx": "4.19.4",
    "turbo": "^2.5.3",
    "typescript": "5.8.2",
    "ultracite": "^5.0.19"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.13",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "better-auth": "1.3.0-beta.7"
  }
}
